     <div class="pagination-inner">
          <ul class="pagination">
               <!-- arrow previous -->
               <% if(currentPage > 1) { %>
                    <li class="page-item">
                         <a class="page-link" href="?page=<%= prevPage %>&dir=<%= dir %>&order=<%= order %>&limit<%= limit %>&stock=<%= stock %>&price=<%= price %>">&lt;Prev</a>
                    </li>
               <% } %>
               <!-- page 1 -->
               <% if(currentPage > 1) { %>
                    <li class="page-item">
                         <a class="page-link" href="?page=1&dir=<%= dir %>&order=<%= order %>&limit<%= limit %>&stock=<%= stock %>&price=<%= price %>"><span>1</span></a>
                    </li>
               <% } %>
               <!-- ... -->
               <% if(currentPage - 2 > 1) { %>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
               <% } %>
               <!-- previous page -->
               <% if(prevPage > 1) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= prevPage %>&dir=<%= dir %>&order=<%= order %>&limit=<%= limit %>&stock=<%= stock %>&price=<%= price %>"><%= prevPage %></a></li>
               <% } %>
               <!-- current page -->
                    <li class="active page-item"><a class="page-link" href="?page=<%= currentPage %>&dir=<%= dir %>&order=<%= order %>&limit=<%= limit %>&stock=<%= stock %>&price=<%= price %>"><%= currentPage %></a></li>
               <!-- next page -->
               <% if(nextPage < lastPage) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= nextPage %>&dir=<%= dir %>&order=<%= order %>&limit=<%= limit %>&stock=<%= stock %>&price=<%= price %>"><%= nextPage %></a></li>
               <% } %>
               <!-- ... -->
               <% if(currentPage + 2 < lastPage) { %>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
               <% } %>
               <!-- last page -->
               <% if(currentPage < lastPage) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= lastPage %>&dir=<%= dir %>&order=<%= order %>&limit=<%= limit %>&stock=<%= stock %>&price=<%= price %>"><%= lastPage %></a></li>
               <% } %>
               <!-- arrow next -->
               <% if(nextPage <= lastPage) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= nextPage %>&dir=<%= dir %>&order=<%= order %>&limit=<%= limit %>&stock=<%= stock %>&price=<%= price %>">Next&gt;</a></li>
               <% } %>
          </ul>
     </div>
</div>
<!-- End of PAGINATION -->