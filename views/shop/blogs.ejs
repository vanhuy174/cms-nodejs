                                <i class="fa fa-square" aria-hidden="true"></i>
                                <a href="/blogs/category/<%= cmscategori.slug %>" class="activSub lg " style="text-transform: none"><%= cmscategori.title %></a>

                            </li>
                        <% }); %>

                    </ul>
                </div>
            </div>

            <div class="div-left-2">
                <div class="col-md-12 col-sm-12 col-12 col3">
                    <p class=" danh-muc">NHỮNG BÀI VIẾT</p>
                    <% news.forEach(product => { %>
                        <div class="the-tags">
                            <div class="khoi-nho row">
                                <div class="khoi-nho-left col-md-5">
                                    <a href="/blogs/<%= product.slug %>">
