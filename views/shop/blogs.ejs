                        <div class="row">
                            <div class="col-md-1 col-sm-5 col-5 text-right page-wrapper ">
                                <label class="control-label" for="input-limit">Show:</label>
                            </div>
                            <div class="col-md-2 col-sm-5 col-5 text-right page-wrapper">
                                <div class="limit">
                                    <select id="input-limit" class="form-control" onchange="if(this.value) window.location.href = this.value">
                                        <option value="?page=<%= currentPage %>&dir=<%= dir %>&order=<%= order %>&limit=2&stock=<%= stock %>&price=<%= price %>" <% if(limit == 2) { %> selected <% } %>>2</option>
                                        <option value="?page=<%= currentPage %>&dir=<%= dir %>&order=<%= order %>&limit=4&stock=<%= stock %>&price=<%= price %>" <% if(limit == 4) { %> selected <% } %>>4</option>
                                        <option value="?page=<%= currentPage %>&dir=<%= dir %>&order=<%= order %>&limit=36&stock=<%= stock %>&price=<%= price %>" <% if(limit == 36) { %> selected <% } %>>36</option>
                                        <option value="?page=<%= currentPage %>&dir=<%= dir %>&order=<%= order %>&limit=48&stock=<%= stock %>&price=<%= price %>" <% if(limit == 48) { %> selected <% } %>>48</option>
                                        <option value="?page=<%= currentPage %>&dir=<%= dir %>&order=<%= order %>&limit=96&stock=<%= stock %>&price=<%= price %>" <% if(limit == 96) { %> selected <% } %>>96</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

                <div class="row dong-botton">
                    <% news.forEach(product => { %>
                        <div class="div-right-1">
                            <div class="col-md-12 col-sm-12 col-12">
                                <div class="row dong-duoi">
                                    <div class="col-md-5 col-sm-12 col-12  anh-left">
                                        <a href="/products/<%= product.category.slug %>/<%= product.slug %>">
                                            <img class="img-responsive img-fluid" title="<%= product.title %>" alt="<%= product.image %>" src="/images/products/<%= product.firstSlug %>/<%= product.image %>">
                                        </a>
                                    </div>
                                    <div class="col-md-7 col-sm-12 col-12 b">
                                        <h3 class="blog-item-name">
                                            <a href=""><%= product.title %></a>
                                        </h3>
                                        <div class="post-time">
                                            Việt bởi <span>Đặng Hữu Danh</span>, Ngày 14/03/2017
                                        </div>
                                        <p class="blog-item-summary">
                                            <%- product.features %>
                                        </p>
                                        <a href="blogs/<%=product.slug %>" class="btn btn-white">Đọc thêm</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    <% }); %>

                </div>
                <%- include('../layouts/paginationM.ejs') %>
            </div>
        </div>
        <div class="col-md-3 d-left">
            <div class="div-left-1">
                <div class="col-md-12 col-sm-12 col-12 col3">
                    <p class=" danh-muc">DANH MỤC BÀI VIẾT</p>
                    <ul class="list-group box-category treeview">

                        <!-- Link -> Category -->
                        <% categori.forEach(cmscategori => { %>
